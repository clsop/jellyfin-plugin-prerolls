{
    // Paths and plugin name are configured in settings.json
    "version": "2.0.0",
    "tasks": [
        {
        // A chain task - build the plugin, then copy it to your
        // jellyfin server's plugin directory
        "label": "build",
        "dependsOrder": "sequence",
        "dependsOn": ["make-plugin-dir", "publish"]
        },
        {
        // Build the plugin
        "label": "publish",
        "command": "dotnet",
        "type": "shell",
        "args": [
            "publish",
            "${workspaceFolder}/${config:pluginName}.sln",
            "-o",
            "${workspaceFolder}/dist/${config:pluginName}",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
        ],
        "group": "build",
        "presentation": {
            "reveal": "silent"
        },
        "problemMatcher": "$msCompile"
        },
        {
            // Ensure the plugin directory exists before trying to use it
            "label": "make-plugin-dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
            "-p",
            "${workspaceFolder}/dist/${config:pluginName}/"
            ]
        },
        {
            "label": "run-container",
            "type": "docker-run",
            "dependsOn": "build",
            "dockerRun": {
                "remove": true,
                "image": "jellyfin/jellyfin",
                "ports": [{
                    "containerPort": 8096,
                    "hostPort": 8096
                }],
                "volumes": [{
                    "localPath": "${workspaceFolder}/dist/",
                    "containerPath": "/config/plugins"
                }]
            }
        }
    ]
}