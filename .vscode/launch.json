{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "docker",
            "name": "Debug",
            "request": "launch",
            "preLaunchTask": "run-container",
            "platform": "netCore",
            "dockerServerReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+http://\\S",
                "uriFormat": "http://localhost:8086",
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Jellyfin.Plugin.Prerolls/Jellyfin.Plugin.Prerolls.csproj",
                "program": "${workspaceFolder}/dist/${config:pluginName}/${config:pluginName}.dll"
            }
        }
    ]
}